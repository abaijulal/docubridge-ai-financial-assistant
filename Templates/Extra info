from flask import Flask

app = Flask(__name__)


@app.route('/')
def index():
    return '''
        <html>
            <head><title>AI Financial Modeling Assistant</title></head>
            <body>
                <h1>AI Financial Modeling Assistant</h1>
                <p>This tool uses AI to help simplify the process of financial modeling.</p>
            </body>
        </html>
    '''
if __name__ == '__main__':
  app.run(host='0.0.0.0', port=5000)



<!DOCTYPE html>
<html>
<head>
  <title>AI Financial Modeling Assistant</title>
</head>
<body>
  <h1>AI Financial Modeling Assistant</h1>
  <form action="/upload" method="POST" enctype="multipart/form-data">
    <label for="file">Select Excel File:</label>
    <input type="file" name="file" accept=".x;s,.xlsx" required><br><br>

    <label for="question">Your Question:</label>
    <input type="text" name="question" placeholder="e.g., What's the total revenue for Q2?" required"><br><br>
    <button type="submit">Submit</button>
  </form>
</body>
</html>